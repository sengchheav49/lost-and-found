<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/accent_light">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>  <!-- Increased radius for more rounded corners -->

            <gradient
                android:startColor="@color/gradient_start"
                android:centerColor="@color/gradient_center"
                android:endColor="@color/gradient_end"
                android:angle="45" />

            <stroke
                android:width="1dp"
                android:color="@color/accent_light" />

            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</ripple>
